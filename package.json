{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "concurrently \"mix watch\" \"php artisan tailwindcss:watch\"",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production && php artisan tailwindcss:build --prod",
        "build-system-resources": "cd nova-components/SystemResources && npm run dev",
        "build-system-resources-prod": "cd nova-components/SystemResources && npm run prod",
        "build-nova-fieldsets": "cd nova-components/NovaFieldsets && npm run dev",
        "build-nova-fieldsets-prod": "cd nova-components/NovaFieldsets && npm run prod"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.0",
        "@tailwindcss/typography": "^0.5.2",
        "concurrently": "^7.1.0",
        "laravel-mix": "^6.0.43",
        "scroll-lock": "^2.1.5"
    }
}